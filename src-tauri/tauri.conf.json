{
  "productName": "FluentDiary",
  "version": "1.1.0",
  "identifier": "com.fluentdiary.desktop",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Fluent Diary",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "center": true,
        "titleBarStyle": "Transparent",
        "hiddenTitle": true,
        "trafficLightPosition": {
          "x": 20,
          "y": 22
        }
      }
    ],
    "macOSPrivateApi": true,
    "security": {
      "csp": null,
      "assetProtocol": {
        "enable": true,
        "scope": ["$APPDATA/**", "$APPLOCALDATA/**", "$APPCONFIG/**", "$RESOURCE/**"]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "createUpdaterArtifacts": true,
    "icon": [
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "copyright": "",
    "category": "Education",
    "shortDescription": "Privacy-first speech practice app",
    "longDescription": "Desktop app for speech practice with offline transcription and metrics tracking",
    "macOS": {
      "minimumSystemVersion": "10.15",
      "signingIdentity": "Developer ID Application: Quin Ortiz (3ACAJCX8FW)",
      "providerShortName": "3ACAJCX8FW",
      "entitlements": "Entitlements.plist"
    },
    "windows": {
      "nsis": {
        "compression": "lzma"
      }
    }
  },
  "plugins": {
    "shell": {
      "open": true
    },
    "deep-link": {
      "mobile": [],
      "desktop": {
        "schemes": ["fluentdiary"]
      }
    },
    "updater": {
      "active": true,
      "endpoints": [
        "https://github.com/Thxamillion/fluentdiary-desktop/releases/latest/download/latest.json"
      ],
      "dialog": false,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEM5OEY4QkQ4NjYyNkVFMjMKUldRajdpWm0ySXVQeVhPWDY3cWJrK1BLNzZoRytTemxxWWJzRlY5MHV4YUdkd2tUcThiOE1hMUEK"
    }
  }
}